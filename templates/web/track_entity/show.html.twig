{% extends 'base.html.twig' %}

{% block title %}TrackEntity{% endblock %}

{% block body %}
<div class="container">
    <a href="{{ path('app_web_track_entity_index') }}" class="btn btn-primary" >Retour aux tracks</a>

    <table class="table table-bordered mt-3">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ track_entity.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ track_entity.title }}</td>
            </tr>
            <tr>
                <th>Duration</th>
                <td>{{ track_entity.duration }}</td>
            </tr>
            <tr>
                <th>Album</th>
                <td>{{ track_entity.albumEntity.name }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_web_track_entity_edit', {'id': track_entity.id}) }}" class="btn btn-primary mb-2">Modifier</a>

    {{ include('web/track_entity/_delete_form.html.twig') }}
</div>
{% endblock %}