{% extends 'base.html.twig' %}

{% block title %}AlbumEntity{% endblock %}

{% block body %}
<div class="container">
    <h1>Album : {{ album_entity.name }}</h1>

    <a href="{{ path('app_web_album_entity_index') }}" class="btn btn-primary" >Retour aux albums</a>

    <table class="table table-bordered mt-3">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ album_entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ album_entity.name }}</td>
            </tr>
            <tr>
                <th>Year</th>
                <td>{{ album_entity.year }}</td>
            </tr>
            <tr>
                <th>Tracks</th>
                <td>
                    {% for track in album_entity.tracks %}
                        <p>{{ track.title }}</br></p>
                    {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_web_album_entity_edit', {'id': album_entity.id}) }}" class="btn btn-primary mb-2">Modifier</a>

    {{ include('web/album_entity/_delete_form.html.twig') }}
</div>
{% endblock %}
